<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.example.krish.medical_app.Login">

    <TextView
        android:text="Login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/login_heading"
        android:textSize="30dp"
        android:textColor="#FFFFFF"
        android:layout_marginStart="70dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginEnd="70dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        app:layout_constraintVertical_bias="0.048" />

    <TextView
        android:layout_width="70dp"
        android:layout_height="20dp"
        android:text="Email"
        android:textColor="#FFFFFF"
        android:textSize="15dp"
        android:id="@+id/textView_login_email"
        android:layout_marginStart="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@+id/et_login_email" />

    <EditText
        android:id="@+id/et_login_email"
        android:layout_width="0dp"
        android:layout_height="39dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="88dp"
        android:ems="15"
        android:hint="example@gmail.com"
        android:inputType="textPersonName"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:textColorLink="@android:color/background_light"
        android:textSize="15dp"
        android:textStyle="italic"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toRightOf="@+id/textView_login_email"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_heading" />

    <TextView
        android:text="Password"
        android:textSize="15dp"
        android:layout_width="70dp"
        android:layout_height="22dp"
        android:id="@+id/tv_lodin_password"
        android:textColor="#FFFFFF"
        app:layout_constraintLeft_toLeftOf="@+id/textView_login_email"
        app:layout_constraintRight_toRightOf="@+id/textView_login_email"
        app:layout_constraintBaseline_toBaselineOf="@+id/et_login_password" />

    <EditText
        android:layout_width="0dp"
        android:layout_height="39dp"
        android:inputType="textPassword"
        android:hint="At least 8 characters"
        android:textStyle="italic"
        android:textSize="13dp"
        android:textColorHint="#FFFFFF"
        android:textColor="#FFFFFF"
        android:ems="10"
        android:id="@+id/et_login_password"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/et_login_email"
        app:layout_constraintRight_toRightOf="@+id/et_login_email"
        app:layout_constraintLeft_toLeftOf="@+id/et_login_email"
        app:layout_constraintBottom_toTopOf="@+id/tv_login_que"
        android:layout_marginBottom="8dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:text="Login"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:id="@+id/btn_login_login"
        android:background="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_login_signup"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:text="Don't have an account?"
        android:layout_width="183dp"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:textSize="15dp"
        android:id="@+id/tv_login_que"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_login_signup"
        android:layout_marginStart="48dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="63dp" />

    <TextView
        android:text="Sign Up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:textColor="#FFFFFF"
        android:textSize="15dp"
        android:id="@+id/tv_login_signup"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toRightOf="@+id/tv_login_que"
        android:layout_marginTop="190dp"
        app:layout_constraintTop_toBottomOf="@+id/et_login_email"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.277" />


</android.support.constraint.ConstraintLayout>
