<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_new"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">

            <TextView
                android:id="@+id/textView_new_cancel_btn"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginStart="0dp"
                android:clickable="true"
                android:text="Cancel"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/textView_new_new_patient"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="0.85"
                android:gravity="center"
                android:padding="2dp"
                android:text="New Patient"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/textView_new_tp"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginStart="0dp"
                android:layout_weight="0.1"
                android:clickable="false"
                android:textAlignment="center" />

        </LinearLayout>


    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:id="@+id/scrollview_new"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:weightSum="2">

                <TextView
                    android:id="@+id/textView_new_first"
                    android:layout_width="70dp"
                    android:layout_height="45dp"
                    android:layout_marginStart="20dp"
                    android:layout_weight="0.3"
                    android:padding="5dp"
                    android:text="FIRST NAME"
                    android:textSize="13dp" />

                <EditText
                    android:id="@+id/editText_new_first"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_weight="1.5"
                    android:hint="First Name"
                    android:singleLine="true"
                    android:textSize="18dp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2">

                <TextView
                    android:id="@+id/textView_new_middle"
                    android:layout_width="70dp"
                    android:layout_height="45dp"
                    android:layout_marginStart="20dp"
                    android:layout_weight="0.3"
                    android:padding="5dp"
                    android:text="MIDDLE NAME"
                    android:textSize="13dp" />

                <EditText
                    android:id="@+id/editText_new_middle"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_weight="1.5"
                    android:hint="Middle Name"
                    android:singleLine="true"
                    android:textSize="18dp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2">

                <TextView
                    android:id="@+id/textView_new_last"
                    android:layout_width="70dp"
                    android:layout_height="45dp"
                    android:layout_marginStart="20dp"
                    android:layout_weight="0.3"
                    android:padding="5dp"
                    android:text="LAST NAME"
                    android:textSize="13dp" />

                <EditText
                    android:id="@+id/editText_new_last"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_weight="1.5"
                    android:hint="Last Name"
                    android:singleLine="true"
                    android:textSize="18dp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2">

                <TextView
                    android:id="@+id/textView_new_id"
                    android:layout_width="70dp"
                    android:layout_height="45dp"
                    android:layout_marginStart="20dp"
                    android:layout_weight="0.3"
                    android:padding="5dp"
                    android:text="PATIENT - ID"
                    android:textSize="13dp" />

                <EditText
                    android:id="@+id/editText_new_id"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_weight="1.5"
                    android:hint="Patient's ID"
                    android:singleLine="true"
                    android:textSize="18dp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2">

                <TextView
                    android:id="@+id/textView_new_gender"
                    android:layout_width="70dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="8dp"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:text="GENDER"
                    android:textSize="13dp" />

                <RadioGroup
                    android:id="@+id/radio_new_Gender"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/radio_new_male"
                        android:layout_width="0dp"
                        android:layout_height="45dp"
                        android:layout_weight="0.2"
                        android:checked="true"
                        android:text="Male" />

                    <RadioButton
                        android:id="@+id/radio_new_female"
                        android:layout_width="0dp"
                        android:layout_height="45dp"
                        android:layout_weight="0.25"
                        android:text="Female" />

                    <RadioButton
                        android:id="@+id/radio_new_other"
                        android:layout_width="0dp"
                        android:layout_height="45dp"
                        android:layout_weight="0.2"
                        android:text="Other" />

                </RadioGroup>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2">

                <TextView
                    android:id="@+id/textView_new_dob"
                    android:layout_width="70dp"
                    android:layout_height="45dp"
                    android:layout_marginStart="20dp"
                    android:layout_weight="0.3"
                    android:padding="5dp"
                    android:text="DATE OF BIRTH"
                    android:textSize="13dp" />

                <EditText
                    android:id="@+id/editText_new_dob"
                    android:layout_width="0dp"
                    android:layout_height="45dp"

                    android:layout_weight="1.5"
                    android:hint="Patient's  Date of Birth"
                    android:textSize="18dp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2">

                <TextView
                    android:id="@+id/textView_new_age"
                    android:layout_width="70dp"
                    android:layout_height="45dp"
                    android:layout_marginStart="20dp"
                    android:layout_weight="0.3"
                    android:padding="5dp"
                    android:text="AGE"
                    android:textSize="13dp" />

                <EditText
                    android:id="@+id/editText_new_age"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_weight="1.5"
                    android:hint="Age"
                    android:inputType="number"
                    android:singleLine="true"
                    android:textSize="18dp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2">

                <TextView
                    android:id="@+id/textView_new_email"
                    android:layout_width="70dp"
                    android:layout_height="45dp"
                    android:layout_marginStart="20dp"
                    android:layout_weight="0.3"
                    android:padding="5dp"
                    android:text="E-MAIL"
                    android:textSize="13dp" />

                <EditText
                    android:id="@+id/editText_new_email"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_weight="1.5"
                    android:hint="E-mail Address"
                    android:inputType="textEmailAddress"
                    android:singleLine="true"
                    android:textSize="18dp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2">

                <TextView
                    android:id="@+id/textView_new_address"
                    android:layout_width="70dp"
                    android:layout_height="45dp"
                    android:layout_marginStart="20dp"
                    android:layout_weight="0.3"
                    android:padding="5dp"
                    android:text="ADDRESS"
                    android:textSize="13dp" />

                <EditText
                    android:id="@+id/editText_new_address"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_weight="1.5"
                    android:hint="Address"
                    android:inputType="textPostalAddress"
                    android:singleLine="true"
                    android:textSize="18dp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#d3d3d3"
                android:weightSum="2">

                <TextView
                    android:id="@+id/textView_new_contact"
                    android:layout_width="70dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="8dp"
                    android:layout_weight="1.9"
                    android:padding="5dp"
                    android:text="CONTACT"
                    android:textSize="17dp" />

                <ImageButton
                    android:id="@+id/imageButton_new_contact"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="0dp"
                    android:layout_marginTop="5dp"
                    android:padding="5dp"
                    app:srcCompat="@android:drawable/arrow_down_float" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2">

                <TextView
                    android:id="@+id/textView_new_mobile"
                    android:layout_width="70dp"
                    android:layout_height="45dp"
                    android:layout_marginStart="20dp"
                    android:layout_weight="0.3"
                    android:padding="5dp"
                    android:text="MOBILE"
                    android:textSize="13dp" />

                <EditText
                    android:id="@+id/editText_new_mobile"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_weight="1.5"
                    android:hint="Mobile Number"
                    android:inputType="phone"
                    android:singleLine="true"
                    android:textSize="18dp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2">

                <TextView
                    android:id="@+id/textView_new_phone"
                    android:layout_width="70dp"
                    android:layout_height="45dp"
                    android:layout_marginStart="20dp"
                    android:layout_weight="0.3"
                    android:padding="5dp"
                    android:text="PHONE"
                    android:textSize="13dp" />

                <EditText
                    android:id="@+id/editText_new_phone"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_weight="1.5"
                    android:hint="Phone Number"
                    android:inputType="phone"
                    android:singleLine="true"
                    android:textSize="18dp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#d3d3d3"
                android:weightSum="2">

                <TextView
                    android:id="@+id/textView_new_diagnosis"
                    android:layout_width="70dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="8dp"
                    android:layout_weight="1.9"
                    android:padding="5dp"
                    android:text="DIAGNOSIS"
                    android:textSize="17dp" />

                <ImageButton
                    android:id="@+id/imageButton_new_diagnosis"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="0dp"
                    android:layout_marginTop="5dp"
                    android:padding="5dp"
                    app:srcCompat="@android:drawable/arrow_down_float" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2">

                <ImageButton
                    android:id="@+id/imageButton_new_type_diagnosis"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="20dp"
                    android:background="@drawable/type_diagnosis"
                    android:clickable="false"
                    android:padding="5dp" />

                <EditText
                    android:id="@+id/editText_new_diagnosis_type"
                    android:layout_width="70dp"
                    android:layout_height="45dp"
                    android:layout_marginStart="20dp"
                    android:layout_weight="1.3"
                    android:hint="Type a Diagnosis"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:textSize="18dp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:weightSum="2">

                <ImageButton
                    android:id="@+id/imageButton_new_add_diagnosis"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="20dp"
                    android:background="@drawable/add_diadnosis"
                    android:clickable="true"
                    android:padding="5dp" />

                <TextView
                    android:id="@+id/textView_new_diagnosis_add"
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="7dp"
                    android:layout_weight="1.3"
                    android:padding="5dp"
                    android:text="Add a Diagnosis"
                    android:textSize="15dp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#d3d3d3"
                android:weightSum="2">

                <TextView
                    android:id="@+id/textView_new_medical_history"
                    android:layout_width="70dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="8dp"
                    android:layout_weight="1.9"
                    android:padding="5dp"
                    android:text="MEDICAL HISTORY"
                    android:textSize="17dp" />

                <ImageButton
                    android:id="@+id/imageButton_new_medical_history"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="0dp"
                    android:layout_marginTop="5dp"
                    android:padding="5dp"
                    app:srcCompat="@android:drawable/arrow_down_float" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2">

                <EditText
                    android:id="@+id/editText_new_add_medical_history"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginStart="20dp"
                    android:layout_weight="1.3"
                    android:hint="Enter Medical History"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:textSize="18dp" />

            </LinearLayout>


        </LinearLayout>

    </ScrollView>


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:gravity="end"
        android:padding="10dp"
        android:text="CREATE"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="20dp" />


</LinearLayout>